{
  "root": true,
  "parser": "babel-eslint",
  "extends": "airbnb-base",
  "env": {
    "node": true,
    "es6": true,
    "mocha": true,
    "browser": true,
    "jest": true
  },
  "rules": {
    "one-var": 0,
    "no-unused-vars": 0,
    "no-unused-expressions": 0,
    "no-undef": 0,
    "no-plusplus": 0,
    "no-underscore-dangle": 0,
    "one-var-declaration-per-line": 0,
    "new-cap": 0,
    "import/no-named-as-default": 0,
    "import/prefer-default-export": 0,
    "no-useless-escape": 0,
    "max-len": [
      2,
      80,
      2
    ],
    "consistent-return": 0,
    "no-param-reassign": 0,
    "comma-dangle": 0,
    "curly": [
      "error",
      "multi-line"
    ],
    "import/no-unresolved": "off",
    "import/extensions": "off",
    "no-shadow": [
      "error",
      {
        "allow": [
          "req",
          "res",
          "err"
        ]
      }
    ],
    "valid-jsdoc": [
      "error",
      {
        "requireReturn": true,
        "requireReturnType": true,
        "requireParamDescription": false,
        "requireReturnDescription": true
      }
    ],
    "require-jsdoc": [
      "error",
      {
        "require": {
          "FunctionDeclaration": true,
          "MethodDefinition": true,
          "ClassDeclaration": true
        }
      }
    ]
  }
}
